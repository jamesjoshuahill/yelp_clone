%h1
  Review
  = @restaurant.name
= form_for @review do |f|
  = f.hidden_field :restaurant_id, value: @restaurant.id
  = f.label :comment
  = f.text_field :comment, placeholder: "Review this restaurant"
  = f.label :rating
  = f.select(:rating, options_for_select([['5', 5], ['4', 4], ['3', 3], ['2', 2], ['1', 1]]))
  = f.submit 'Submit review'